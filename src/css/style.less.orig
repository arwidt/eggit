* {
	margin: 0;
	padding: 0;
}

html {
	position: relative;
	min-height: 100%;
}

body {
	margin-bottom: 30px;

	/* Font */
	font-family: 'Open Sans', sans-serif;
	font-weight: 500;
	color: #FFFFFF;
	font-size: 10px;
	text-rendering: optimizeLegibility;

	.gradient-background(@backgroundStartColor, @backgroundEndColor);
}

#top {
	.centered;
	margin-left: 10px;
	margin-top: 40px;
	margin-bottom: 20px;
}

#time_visual {
	font-family: 'Sniglet', cursive;
	font-size: 300px;
	margin: 5%;

	.text-shadow;

	.time_divider {
		position: relative;
		top: -0.1em;
	}
}

